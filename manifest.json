{
	"manifest_version": 2,
	"name": "Hypothesify",
	"version": "0.0.1",
	
	"description": "Opens as hypothes.is", 
	"icons": {
		"48": "icons/icon_new.svg"
	},
	
	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs"
	],

	"background": {
    "scripts": ["background_scripts/background_hypothesify.js"]
  },
	
	"content_scripts": [
    {
			"matches": ["*://*/*"],
      "js": ["content_scripts/content_hypothesify.js"]
    }
  ],
	
	"browser_action": {
		"default_icon": "icons/icon_new.svg",
		"default_title": "Hypothesify",
		"default_popup": "popup/hypothesify.html"
	}
}